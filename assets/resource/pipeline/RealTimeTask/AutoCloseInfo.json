{
    // ========================================================
    // 任务 1：全屏阻断点击 (Priority: High)
    // 适配点：ROI 覆盖全屏中央区域，点击位置避开边缘
    // ========================================================
    "ClickAnywhereToContinue": {
        "doc": "检测屏幕上出现的'点击任意处继续'提示并点击",
        "recognition": {
            "type": "OCR",
            "param": {
                "expected": [
                    "点击任意处继续",
                    "点击任意处",
                    "任意处继续",
                    "点击",
                    "任意处"
                ],
                // 16:10 安全区优化：X从50开始，宽度给足
                "roi": [
                    50,
                    25,
                    1100,
                    680
                ]
            }
        },
        "action": {
            "type": "Click",
            // 点击位置优化：避开最右侧边缘，选一个16:10屏幕肯定在内的点
            // (1152x720 是16:10的宽，所以 x=1000 很安全)
            "param": {
                "target": [
                    1000,
                    600,
                    50,
                    50
                ]
            }
        },
        "post_wait_freezes": 500,
        "focus": {
            "Node.Recognition.Succeeded": "识别到[点击任意处继续]"
        },
        "next": [
            "RealTimeTaskMain"
        ]
    },
    // ========================================================
    // 任务 2：特殊 UI 检测 (Priority: Medium)
    // 适配点：这些 UI 通常是居中或者相对固定的，保持原样或微调
    // ========================================================
    "CheckSpecialInfoPanel": {
        "doc": "检测并关闭特殊信息面板(档案/语音)",
        "recognition": "Or",
        "any_of": [
            {
                "doc": "检测档案界面",
                "recognition": "TemplateMatch",
                "template": "CloseInfo/DocHeader.png",
                "threshold": 0.8,
                "roi": [
                    401,
                    87,
                    477,
                    36
                ] // 居中区域，安全
            },
            {
                "doc": "检测语音界面",
                "recognition": "TemplateMatch",
                "template": "CloseInfo/VoiceBar.png",
                "threshold": 0.8,
                "roi": [
                    228,
                    127,
                    40,
                    471
                ] // 左侧区域，安全
            }
        ],
        "focus": {
            "Node.Recognition.Succeeded": "识别到剧情文档/语音，准备关闭"
        },
        "next": [
            "SafeCloseButton"
        ]
    },
    // 动作节点：右上角关闭按钮
    // ⚠️ 重点适配对象：右上角在 16:10 上会向左偏移
    "SafeCloseButton": {
        "doc": "执行通用关闭操作",
        "recognition": "TemplateMatch",
        "template": "CloseInfo/CloseButton.png",
        "threshold": 0.7, // 稍微降低阈值以适应缩放造成的像素模糊
        // ROI 扩大：覆盖 16:9 的最右(1280) 和 16:10 的最右(1152)
        // X 从 1050 开始搜，直到 1280，确保能抓到
        "roi": [
            1050,
            0,
            230,
            80
        ],
        "action": "Click",
        "post_wait_freezes": 500,
        "next": [
            "RealTimeTaskMain"
        ]
    },
    // ========================================================
    // 任务 3：教程翻页 (Priority: Medium)
    // ⚠️ 重点适配对象：翻页箭头通常在极右侧
    // ========================================================
    "HandleTutorialPaging": {
        "doc": "识别说明书翻页箭头",
        "recognition": {
            "type": "TemplateMatch",
            "param": {
                "template": "CloseInfo/TutorialNext.png",
                "threshold": 0.75,
                // ROI 扩大：X 向左延伸到 1000，确保 16:10 也能包住
                "roi": [
                    1000,
                    250,
                    280,
                    200
                ]
            }
        },
        "action": "Click",
        "post_wait_freezes": 400,
        "next": [
            "HandleTutorialConfirm",
            "RealTimeTaskMain"
        ]
    },
    // ========================================================
    // 任务 4：教程确认 (Priority: Medium)
    // 适配点：底部居中，天然安全
    // ========================================================
    "HandleTutorialConfirm": {
        "doc": "识别说明书底部的黄色确认按钮",
        "recognition": {
            "type": "TemplateMatch",
            "param": {
                "template": "CloseInfo/TutorialConfirm.png",
                "threshold": 0.8,
                // 稍微放宽一点点
                "roi": [
                    500,
                    600,
                    300,
                    100
                ]
            }
        },
        "action": "Click",
        "post_wait_freezes": 500,
        "next": [
            "RealTimeTaskMain"
        ]
    },
    // ========================================================
    // 任务 5：强制指引 (Priority: High)
    // 适配点：全屏搜索，天然安全
    // ========================================================
    "HandleTutorialGuide": {
        "doc": "检测并点击新手引导的指引箭头",
        "recognition": {
            "type": "TemplateMatch",
            "param": {
                "template": "CloseInfo/HandPoint.png",
                "threshold": 0.6,
                // 直接写满 1280x720，MaaFW 会处理越界
                "roi": [
                    0,
                    0,
                    1280,
                    720
                ]
            }
        },
        "action": {
            "type": "Click",
            "param": {
                "target_offset": [
                    25,
                    -15,
                    0,
                    0
                ]
            }
        },
        "post_wait_freezes": 500,
        "next": [
            "RealTimeTaskMain"
        ]
    }
}